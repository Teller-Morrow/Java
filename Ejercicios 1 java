/*1.- Construir un algoritmo que tome como dato de entrada un número que corresponde a la
 * longitud de un radio y nos calcula y escribe la longitud de la circunferencia, el área del círculo y el
 * volumen de la esfera.
 * l=2*pi*r
 * a=pi*r2
 * v=4/3*pi*r3 
*/

import java.util.Scanner;

public class EjerciciosI {
	
	public static void main(String[] args) {
		System.out.println("escribe el radio de la circunferencia:");
		int num;
		Scanner sc=new Scanner(System.in);
		double radio=sc.nextInt(); 
		double l=2*Math.PI*radio;
		double a=Math.PI*Math.pow(radio,2);
		double v=4/3*Math.PI*Math.pow(radio,3);
		
		System.out.println("la longitud es " + l +" el area es "+ a +"el volumen es "+ v );
    
		
		
	}

}


